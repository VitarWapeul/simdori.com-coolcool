<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/checkTermConditionsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signupNameText"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="이름"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signupNameInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:gravity="right"
                android:hint="이름을 입력하세요"
                android:inputType="textPersonName"
                android:backgroundTint="@color/white"
                android:textColor="#bfbfbf"
                android:textColorHint="#bfbfbf"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signupEmailText"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="이메일"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signupEmailInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:hint="이메일을 입력하세요"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/white"
                android:textColor="#bfbfbf"
                android:textColorHint="#bfbfbf"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/signupAuthenticationCodeText"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="인증 코드"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signupAuthenticationCodeInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:inputType="number"
                android:backgroundTint="@color/white"
                android:textColor="#bfbfbf"
                android:textSize="16sp" />

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/signupText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@color/transparent"
            android:text="이메일로 아무것도 오지 않았습니다 >"
            android:textColor="#bfbfbf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/signupPwdText"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="비밀번호"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signupPwdInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:hint="비밀번호를 입력하세요"
                android:inputType="textPassword"
                android:backgroundTint="@color/white"
                android:textColor="#bfbfbf"
                android:textColorHint="#bfbfbf"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signupPwdCheckText"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="비밀번호 확인"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signupPwdCheckInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:inputType="textPassword"
                android:backgroundTint="@color/white"
                android:textColor="#bfbfbf"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/signupText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="비밀번호가 일치하지 않습니다"
            android:textColor="#bfbfbf" />

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/checkTermConditionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:inputType="textUri"
        android:text="약관확인"
        android:textColor="#bfbfbf"
        app:layout_constraintBottom_toTopOf="@+id/signupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="@drawable/signup_button"
        android:text="모든 약관에 동의하여 가입"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- 진행바 -->
    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/rotate_loading"
        android:indeterminateDuration="1600"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>